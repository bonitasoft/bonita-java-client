    <jsr305.version>3.0.2</jsr305.version>
    <feign-form.version>3.8.0</feign-form.version>
    <maven-source-plugin.version>3.2.1</maven-source-plugin.version>
    <maven-gpg-plugin.version>3.0.1</maven-gpg-plugin.version>
    <sonar.host.url>https://sonarcloud.io</sonar.host.url>
    <slf4j-api.version>1.7.36</slf4j-api.version>
    <jackson.version>2.13.0</jackson.version>
    <sonar-maven-plugin.version>3.9.1.2184</sonar-maven-plugin.version>
    <maven.javadoc.skip>true</maven.javadoc.skip>
    <sonar.exclusions>**/api/**,**/invoker/**,**/model/**,**/invoker/auth/ApiKeyAuth*,**/invoker/auth/HttpBasicAuth*,**/invoker/auth/HttpBearerAuth*,src/test/java/**,pom.xml</sonar.exclusions>
    <openapi-generator-maven-plugin.version>5.4.0</openapi-generator-maven-plugin.version>
    <okhttp.version>4.9.3</okhttp.version>
